<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BBVAMovilidad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bbvaDarkAqua</item>
        <item name="colorPrimaryVariant">@color/bbvaDarkAqua</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.BBVAMovilidad</item>
    </style>
    <style name="PopUpMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:colorPrimary">@color/bbvaCoreBlue</item>
        <item name="android:fontFamily">@font/benton_sans_bbva_bold</item>
    </style>
    <style name="BBVAButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/bbvaCoreBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BBVAButtonCancel" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/bbvaCoreBlue</item>
    </style>
    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="CustomTextCatalogPicker" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/bbvaCoreBlue</item>
        <item name="android:fontFamily">@font/benton_sans_bbva_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="ToolBarTitleAppearance">
        <item name="fontFamily">@font/benton_sans_bbva_book</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextCatalogs">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="NormalTextLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/benton_sans_bbva_book</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>